<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
		  	http://dozer.sourceforge.net/schema/beanmapping.xsd">
    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <trim-strings>true</trim-strings>
        <map-null>false</map-null>
        <relationship-type>non-cumulative</relationship-type>
        <custom-converters>
            <converter type="com.it.songservice.converter.SongConverter">
                <class-a>java.util.Map</class-a>
                <class-b>com.it.songservice.model.Song</class-b>
            </converter>
            <converter type="com.it.songservice.converter.AlbumConverter">
                <class-a>java.util.Map</class-a>
                <class-b>com.it.songservice.model.Album</class-b>
            </converter>
            <converter type="com.it.songservice.converter.ArtistConverter">
                <class-a>java.util.Map</class-a>
                <class-b>com.it.songservice.model.Artist</class-b>
            </converter>
            <converter type="com.it.songservice.converter.GenreConverter">
                <class-a>java.util.Map</class-a>
                <class-b>com.it.songservice.model.Genre</class-b>
            </converter>
        </custom-converters>
    </configuration>

</mappings>